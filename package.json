{
  "name": "gestortareas",
  "version": "0.1.0",
  "description": "Una app para gestionar tareas con Electron y React",
  "author": "Rosita-chan",
  "private": true,
  "homepage": "./",
  "main": "main.js",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "react-app-rewired": "^2.2.1",
    "serve": "^14.2.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "extends": null,
    "appId": "com.yourcompany.gestortareas",
    "productName": "GestorTareas",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}